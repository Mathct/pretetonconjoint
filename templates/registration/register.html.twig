{% extends 'base.html.twig' %}

{% block title %}S'inscrire - Prête Ton Conjoint{% endblock %}

{% block body %}
<div class="form-container">
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">Créer un compte</h1>
            <p style="color: var(--text-light); text-align: center;">Rejoignez notre communauté</p>
        </div>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            <div class="form-group">
                {{ form_label(registrationForm.pseudo, 'Pseudonyme', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.pseudo, {'attr': {'class': 'form-control', 'placeholder': 'Votre pseudonyme'}}) }}
                {{ form_errors(registrationForm.pseudo) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.email, 'Adresse email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre adresse email'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Choisissez un mot de passe fort'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.age, 'Âge', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.age, {'attr': {'class': 'form-control', 'placeholder': 'Votre âge'}}) }}
                {{ form_errors(registrationForm.age) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.sexe, 'Genre', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.sexe, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.sexe) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.img, 'Photo de profil', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.img, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.img) }}
            </div>

            <div class="form-group">
                <div style="display: flex; align-items: center; gap: 0.5rem;">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions d\'utilisation', {'label_attr': {'style': 'margin: 0; font-size: 0.9rem;'}}) }}
                </div>
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <button type="submit" class="btn" style="width: 100%; margin-top: 1rem;">
                Créer mon compte
            </button>
        {{ form_end(registrationForm) }}

        <div style="text-align: center; margin-top: 2rem; padding-top: 1rem; border-top: 1px solid var(--border-light);">
            <p style="color: var(--text-light);">Déjà un compte ?</p>
            <a href="{{ path('app_login') }}" class="btn btn-secondary" style="margin-top: 0.5rem;">Se connecter</a>
        </div>
    </div>
</div>
{% endblock %}
