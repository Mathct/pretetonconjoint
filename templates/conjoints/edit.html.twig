{% extends 'base.html.twig' %}

{% block title %}Modifier le profil - Prête Ton Conjoint{% endblock %}

{% block body %}
<div class="form-container">
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">Modifier le profil</h1>
            <p style="color: var(--text-light); text-align: center;">Mettez à jour les informations du profil</p>
        </div>

        {{ include('conjoints/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
    </div>

    <div style="display: flex; gap: 1rem; justify-content: center; margin-top: 2rem; flex-wrap: wrap;">
        <a href="{{ path('app_conjoints_index') }}">
            <button class="btn-secondary">← Retour à la liste</button>
        </a>
        
        <div style="background: #FEF2F2; padding: 1rem; border-radius: 10px; border: 1px solid #FECACA;">
            <p style="color: #DC2626; margin: 0 0 0.5rem 0; font-weight: 600;">Zone de danger</p>
            {{ include('conjoints/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
