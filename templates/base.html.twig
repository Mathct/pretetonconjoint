<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Prête Ton Conjoint{% endblock %}</title>
        <link rel="icon" href="{{asset('img/logoconjoint.png')}}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header>
            <div class="container">
                <div class="logo">
                    <img src="{{asset('img/logoconjoint.png')}}" alt="Prête Ton Conjoint - Logo">
                </div>

                <nav>
                    {% if app.user %}
                        <div class="nav-buttons">
                            <a href="{{ path('app_logout') }}">
                                <button class="btn-secondary">Déconnexion</button>
                            </a>

                            {% set currentProfileId = app.request.attributes.get('id') %}

                            {% if currentProfileId != app.user.id %}
                                {# Sur un autre profil ou ailleurs : bouton Mon profil #}
                                <a href="{{ path('app_user', {'id': app.user.id}) }}">
                                    <button>Mon profil</button>
                                </a>
                            {% else %}
                                {# Sur sa propre page : bouton vers app_conjoints_index #}
                                <a href="{{ path('app_conjoints_index') }}">
                                    <button>Retour à la liste</button>
                                </a>
                            {% endif %}

                            <a href="{{ path('app_conjoints_new') }}">
                                <button>+ Ajouter mon/ma conjoint(e)</button>
                            </a>
                        </div>
                    {% else %}
                        <div class="nav-buttons">
                            <a href="{{ path('app_login') }}">
                                <button class="btn-secondary">Connexion</button>
                            </a>
                            <a href="{{ path('app_register') }}">
                                <button>S'inscrire</button>
                            </a>
                        </div>
                    {% endif %}
                </nav>
            </div>
        </header>

        <main class="main-container fade-in">
            {% block body %}{% endblock %}
        </main>

        <footer style="background: var(--background-white); padding: 2rem; text-align: center; margin-top: 3rem; border-top: 1px solid var(--border-light);">
            <p style="color: var(--text-light); font-size: 0.9rem;">
                © 2024 Prête Ton Conjoint - Tous droits réservés
            </p>
        </footer>
    </body>
</html>
